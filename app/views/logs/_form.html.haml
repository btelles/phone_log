= form_for log do |f|
  -if log.errors.any?
    #error_explanation
      %h2= "#{pluralize(log.errors.count, "error")} prohibited this log from being saved:"
      %ul
        - log.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :opened_on
    = f.datetime_select :opened_on
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :assigned_to_id
    = f.select :assigned_to_id, Employee.options_with_id
  .field
    = f.label :bound
    = f.select :bound, Log::BOUND_OPTIONS
  .field
    = f.label :company_id
    = f.select :company_id, Company.options_with_id
  .field
    = f.label :store_number
    = f.text_field :store_number
  .field
    = f.label :reason_code_id
    = f.select :reason_code_id, ReasonCode.options_with_id
  .field
    = f.label :additional_reason_code_id
    = f.select :additional_reason_code_id, ReasonCode.options_with_id
  .field
    = f.label :product_id
    = f.select :product_id, Product.options_with_id
  -#.field
    -#= f.label :company_id
    -#= f.select :company_id, Client.options_with_id
  .actions
    = f.submit 'Save'
