= form_for log do |f|
  -if log.errors.any?
    #error_explanation
      %h2= "#{pluralize(log.errors.count, "error")} prohibited this log from being saved:"
      %ul
        - log.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :logged_at
    = f.datetime_select :logged_at
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :assigned_to_id
    = f.select :assigned_to_id, Employee.options_with_id
  .field
    = f.label :bound
    = f.select :bound, Log::BOUND_OPTIONS
  -#.field
    -#= f.label :product_code_id
    -#= f.select :product_code_id, Product.options_with_id
  -#.field
    -#= f.label :company_id
    -#= f.select :company_id, Client.options_with_id
  .actions
    = f.submit 'Save'
