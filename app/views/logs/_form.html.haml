= form_for log do |f|
  -if log.errors.any?
    #error_explanation
      %h2= "#{pluralize(log.errors.count, "error")} prohibited this log from being saved:"
      %ul
        - log.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :logged_at
    = f.datetime_select :logged_at
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :product_id
    = f.select :product_id, Product.options_with_id
  .field
    = f.label :client_id
    = f.select :client_id, Client.options_with_id
  .actions
    = f.submit 'Save'
